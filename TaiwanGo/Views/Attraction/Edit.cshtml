@model TaiwanGo.Models.Wrap.CAttractionWrap

@{
    ViewData["Title"] = "編輯景點";
}

<h2 class="mb-3">編輯景點</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="FId" />

    <div class="form-group mb-3 row">
        <label asp-for="AttractionName" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <input asp-for="AttractionName" class="form-control" />
            <span asp-validation-for="AttractionName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-3 row">
        <label asp-for="FDescription" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <textarea asp-for="FDescription" class="form-control"></textarea>
            <span asp-validation-for="FDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-3 row">
        <label asp-for="FLocation" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <input asp-for="FLocation" class="form-control" />
            <span asp-validation-for="FLocation" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group mb-3 row">
        <label class="col-md-3 col-form-label">目前圖片</label>
        <div class="col-md-9">
            @if (!string.IsNullOrEmpty(Model.FImage))
            {
                <img src="~/images/@Model.FImage" alt="景點圖片" class="img-thumbnail mb-2" style="max-height:150px;" />
            }
            else
            {
                <p class="text-muted">尚未上傳圖片</p>
            }
        </div>
    </div>

    <div class="form-group mb-3 row">
        <label class="col-md-3 col-form-label">更換圖片</label>
        <div class="col-md-9">
            <input type="file" name="Photo" class="form-control" />
        </div>
    </div>

    <div class="form-group text-end">
        <button type="submit" class="btn btn-primary">儲存修改</button>
        <a asp-action="List" class="btn btn-secondary">取消</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
