@model TaiwanGo.Models.Wrap.CAttractionWrap
@{
	ViewData["Title"] = "新增景點";
}

<h1>新增景點</h1>
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="FCategoryId" class="control-label">分類</label>
				<select asp-for="FCategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
				<span asp-validation-for="FCategoryId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AttractionName" class="control-label"></label>
				<input asp-for="AttractionName" class="form-control" />
				<span asp-validation-for="AttractionName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FDescription" class="control-label"></label>
				<input asp-for="FDescription" class="form-control" />
				<span asp-validation-for="FDescription" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FLocation" class="control-label"></label>
				<input asp-for="FLocation" class="form-control" />
				<span asp-validation-for="FLocation" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Photo" class="control-label"></label>
				<input asp-for="Photo"  type="file" class="form-control" />

			</div>
			<div class="form-group">
				<input type="submit" value="送出修改" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
<div>
	<a asp-action="List">取消</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
