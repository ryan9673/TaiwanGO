@model TaiwanGo.Models.Domain.TUser

@{
	ViewData["Title"] = "Edit";
}

<h1>修改會員資訊</h1>

<h4>輸入會員資訊</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			
			<input type="hidden" asp-for="FId" />
			
			<div class="form-group">
				<label asp-for="FName" class="control-label"></label>
				<input asp-for="FName" class="form-control" />
				<span asp-validation-for="FName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FEmail" class="control-label"></label>
				<input asp-for="FEmail" class="form-control" />
				<span asp-validation-for="FEmail" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FPassword" class="control-label"></label>
				<input asp-for="FPassword" class="form-control" />
				<span asp-validation-for="FPassword" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FPhone" class="control-label"></label>
				<input asp-for="FPhone" class="form-control" />
				<span asp-validation-for="FPhone" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FBirthDate" class="control-label"></label>
				<input asp-for="FBirthDate" class="form-control" type="date" />
				<span asp-validation-for="FBirthDate" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="FGender" class="control-label"></label>
				<input asp-for="FGender" class="form-control" />
				<span asp-validation-for="FGender" class="text-danger"></span>
			</div>
		
			<div class="form-group">
				<label asp-for="FIsActive" class="control-label"></label>
				<input asp-for="FIsActive" class="form-control" />
				<span asp-validation-for="FIsActive" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="送出修改" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="List">取消</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
